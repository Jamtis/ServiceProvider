{
    "bundles": {
        "app": {
            "scripts": {
                "src": "src/**/*.js",
                "dest": "build",
                "chain": ["gulp-babel", "gulp-uglify-es"],
                "watch": false
            }
        },
        "testing": {
            "mocha": {
                "src": "test_src/*.js",
                "dest": "test",
                "chain": ["gulp-babel", "gulp-beautify-code"],
                "watch": false
            }
        }
    },
    "modules": {
        "gulp-babel": {
            "presets": [
                ["env", {
                    "targets": {
                        "node": "current"
                    }
                }]
            ]
        },
        "babel-preset-env": {},
        "gulp-beautify-code": {},
        "gulp-uglify-es": {}
    }
}